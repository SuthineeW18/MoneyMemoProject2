<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:angle="90"
                        android:endColor="@color/trans2"
                        android:startColor="@color/trans2"
                        android:type="linear"/>

                    <corners
                        android:radius="100dp"/>
                    <padding
                        android:bottom="5dp"
                        android:left="5dp"
                        android:right="10dp"
                        android:top="5dp"/>

                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="right"
                    android:src="@android:drawable/ic_menu_today"

                    />

            </item>

        </layer-list>
    </item>

</selector>