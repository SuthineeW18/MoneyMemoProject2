
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.moneymemo.adminpc.moneymemo.MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bg2"

        android:orientation="vertical"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:drawableTop="@drawable/piggybank"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginStart="-5dp"
                android:layout_marginTop="-70dp"
                android:background="@drawable/balloon2"
                android:paddingEnd="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingStart="30dp"
                android:paddingTop="25dp"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:text="Hello, testeer"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:drawableTop="@drawable/balloon3" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gradient_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_thisMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                android:gravity="center_horizontal|center"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:text="รายรับรวมทั้งหมด คือ "
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_sumIncome"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:autoSizeTextType="uniform"
                            android:background="@drawable/gradient_edtext"
                            android:gravity="center_horizontal"
                            android:text="0.00"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="3"
                            android:autoSizeTextType="uniform"
                            android:paddingLeft="5dp"
                            android:paddingStart="5dp"
                            android:text="บาท "
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:text="รายจ่ายรวมทั้งหมด คือ "
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_sumExpense"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:autoSizeTextType="uniform"
                            android:background="@drawable/gradient_edtext"
                            android:gravity="center_horizontal"
                            android:text="0.00"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="3"
                            android:autoSizeTextType="uniform"
                            android:paddingLeft="5dp"
                            android:paddingStart="5dp"
                            android:text="บาท "
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:text="ยอดเงินคงเหลือ  "
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_moneyLeft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:autoSizeTextType="uniform"
                            android:background="@drawable/gradient_edtext"
                            android:gravity="center_horizontal"
                            android:text="0.00"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="3"
                            android:autoSizeTextType="uniform"
                            android:paddingLeft="5dp"
                            android:paddingStart="5dp"
                            android:text="บาท "
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:text="เป้าหมายการออมเงิน คือ "
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_goal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:autoSizeTextType="uniform"
                            android:background="@drawable/gradient_edtext"
                            android:gravity="center_horizontal"
                            android:text="0.00"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="3"
                            android:autoSizeTextType="uniform"
                            android:paddingLeft="5dp"
                            android:paddingStart="5dp"
                            android:text="บาท"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:text="เดือนนี้สามารถใช้เงินได้ "
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_sumAll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:autoSizeTextType="uniform"
                            android:background="@drawable/gradient_edtext"
                            android:gravity="center_horizontal"
                            android:text="0.00"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="3"
                            android:autoSizeTextType="uniform"
                            android:paddingLeft="5dp"
                            android:paddingStart="5dp"
                            android:text="บาท "
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />


                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient_bg"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/tv_saveGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="กำหนดเป้าหมายการออม"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autoSizeTextType="uniform"
                        android:gravity="end"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:text="ออมเงิน"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/et_saveGoal"
                        android:layout_width="74dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/gradient_edtext"
                        android:ellipsize="end"
                        android:hint="Ex:20"
                        android:inputType="number"
                        android:paddingBottom="5dp"
                        android:paddingLeft="25dp"
                        android:paddingStart="25dp"
                        android:paddingTop="5dp"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="3"
                        android:autoSizeTextType="uniform"
                        android:text="% ของรายได้"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </TableRow>


            </TableLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingEnd="15dp"
                android:paddingRight="15dp">

                <Button
                    android:id="@+id/bt_submit"
                    android:layout_width="84dp"
                    android:layout_height="30dp"
                    android:background="@drawable/gradient_bt"
                    android:gravity="center"
                    android:text="OK"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </TableRow>
        </LinearLayout>
    </LinearLayout>

</ScrollView>

