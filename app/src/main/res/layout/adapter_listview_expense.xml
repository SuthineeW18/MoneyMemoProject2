<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtExpDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/txtExpAmount"
                android:layout_toStartOf="@+id/txtExpAmount"
                android:gravity="start"
                android:padding="5dp"
                android:text="21/02/2556"
                android:textAlignment="textStart"
                android:textColor="#6e6d6d"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtExpCate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnEditExpense"
                android:layout_toEndOf="@+id/btnDeleteExpExpense"
                android:layout_toRightOf="@+id/btnDeleteExpExpense"
                android:gravity="start"
                android:padding="5dp"
                android:text="others"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtExpMemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtExpDate"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/txtExpDate"
                android:gravity="start"
                android:padding="5dp"
                android:textAlignment="textStart"
                android:textColor="#6e6d6d"
                android:textSize="12sp"
                android:textStyle="normal" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtExpAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:padding="5dp"
                    android:text="2,000"
                    android:textAlignment="textEnd"
                    android:textColor="#eb0505"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="25dp">

                <Button
                    android:id="@+id/btnEditExpense"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_below="@+id/txtExpAmount"
                    android:layout_toLeftOf="@+id/btnDeleteExpense"
                    android:layout_toStartOf="@+id/btnDeleteExpense"
                    android:background="@drawable/gradient_btedit" />

                <Button
                    android:id="@+id/btnDeleteExpense"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txtExpAmount"
                    android:background="@drawable/gradient_btdel" />
            </LinearLayout>
        </LinearLayout>

    </TableRow>
</LinearLayout>